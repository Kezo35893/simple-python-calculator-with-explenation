function1 = input("select function (calculator, name count):")
if function1 == "name count":
   name_count = input("write your name")
   print(name_count.index)
if function1 == "calculator":
    print("loading calculator please wait")
    num1 = float(input("select your first number"))
    print(num1)
    operator = input("select operator (-, +, :) ")
    num2 = float(input("select your second number"))
    print(num2)
    
    #operator = input("select operator (-, +, :) ")
    if operator == "-":
        result = num1 - num2
    elif operator == "+":
        result = num1 + num2
    elif operator == ":":
        result = num1 / num2

    print(result)

